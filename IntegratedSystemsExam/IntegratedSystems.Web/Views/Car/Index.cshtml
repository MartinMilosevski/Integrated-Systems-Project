@model List<IntegratedSystems.Domain.Domain_Models.Car>

    
<html>
    <head>
    </head>
    <body>

<div class="card text-bg-dark">
  <img src="https://static.vecteezy.com/system/resources/thumbnails/045/930/923/small_2x/low-angle-view-of-a-modern-luxury-car-on-a-road-trip-with-a-sunset-in-the-background-photo.jpg" class="card-img" style="height:350px">
  <div class="card-img-overlay">
     <h5 class="card-title m-3" style="font-family:'Brush Script MT';font-size:50px;text-align:center">Welcome</h5>
        <p class="card-text m-3" style="font-family:'Brush Script MT';font-size:30px;text-align:center">Rent your car<br /> OR<br /> Rent a car</p>
  </div>
</div>



<div class="container" style="background-color:white">
    <div class="d-grid gap-2">
        <a class="btn btn-outline-warning" asp-action="CreateNewCarPage" asp-controller="Car">Rent out your car</a>
    </div>
    <br />
    <h1 class="mt-3" style="font-family:fantasy;text-align:center">Available cars for rent</h1>
    <hr />


    <div class="row mt-5">
        @{

        foreach (var item in Model)
    {
         <div class="col-md-6 mb-4">
                <div class="card border-primary mb-5" style="max-width: 550px;">
                    <div class="row g-0">
                        <div class="col-md-6">
                            <img src="@item.ImageURL" class="img-fluid rounded-start" style="height: 200px; object-fit: cover;" alt="Car Image">
                            <br />
                            <a asp-action="CarDetails" asp-route-id="@item.Id" asp-controller="Car" class="btn btn-outline-info">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                                </svg>  Details
                            </a>
                            <a asp-action="CarDelete" asp-route-id="@item.Id" asp-controller="Car" class="btn btn-outline-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                     <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                </svg> Delete
                            </a>
                        </div>
                        <div class="col-md-6">
                            <div class="card-body text-primary">
                                <h5 class="card-title">@item.Brand.Manufacturer - @item.Brand.Model</h5>
                                <p class="card-text"><small class="text-body-secondary"></small></p>
                                <p class="card-text"><small class="text-body-secondary">Year:@item.Brand.year</small></p>
                                <p class="card-text" style="font-weight:bolder">Price Per Day:@item.PricePerDay $</p>
                                <a asp-action="AddCarToRentalsPage" asp-controller="Rentals" class="btn btn-outline-success" asp-route-id="@item.Id">
                                    Make a Reservation <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2" viewBox="0 0 16 16">
                                        <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0"/>
                                    </svg> 
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            }
        }
        
    </div>


</div>
</body>
</html>